global:
  scrape_interval: 15s
  evaluation_interval: 15s
  scrape_timeout: 15s

scrape_configs:
  - job_name: "prometheus"
    static_configs:
      - targets: ["localhost:9090"]

  - job_name: "node_exporter"
    static_configs:
      - targets: ["localhost:9100"]
    
  - job_name: "postgres"
    static_configs:
      - targets: ["localhost:9187"]

  - job_name: "magnetico"
    static_configs:
      - targets: ["[{{ wg0_ipv6 }}]:8080"]

{% if forwarding %}
  - job_name: "tor"
    static_configs:
      - targets: ["localhost:9035"]

  - job_name: "snowflake"
    metrics_path: "/internal/metrics"
    static_configs:
      - targets: ["localhost:9999"]
{% endif %}
