[Match]
Name=wan

[Network]
{% if ipv4 and ipv6 %}
DHCP=yes
{% elif ipv4 %}
DHCP=ipv4
{% elif ipv6 %}
DHCP=ipv6
{% else %}
DHCP=no
{% endif %}
LLMNR=no
MulticastDNS=no

[DHCPv4]
SendHostname=no
UseDNS=no
UseNTP=no
UseSIP=no
UseHostname=no
UseDomains=no
UseTimezone=no

[DHCPv6]
UseDNS=no
UseNTP=no
UseHostname=no
UseDomains=no

[IPv6AcceptRA]
UseDNS=no
UseDomains=no