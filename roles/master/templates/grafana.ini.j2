[paths]
data = /tmp
temp_data_lifetime = 1h
logs = /var/log

[server]
domain = {{ master_wg0_ipv6 }}
root_url = http://%(domain)s:3000/
serve_from_sub_path = false
protocol = http
http_addr = {{ master_wg0_ipv6 }}
http_port = 3000

[database]
type = postgres
host = [::1]:5432
name = grafana
user = grafana
password = grafana

[remote_cache]
type = database

[security]
admin_user = grafana
admin_password = grafana
disable_gravatar = true
cookie_secure = false
cookie_samesite = strict
content_security_policy = false

[plugins]
plugin_admin_enabled = false